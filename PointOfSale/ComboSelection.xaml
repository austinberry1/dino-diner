<Page x:Class="PointOfSale.ComboSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ComboSelection">

    <WrapPanel>
        <WrapPanel.Resources>
            <Style TargetType="Button">
                <Setter Property="MinWidth" Value="150"/>
                <Setter Property="MinHeight" Value="180"/>
                
            </Style>
        </WrapPanel.Resources>
        <Button Click="Brontowurst_Click">Brontowurst Combo</Button>
        <Button Click="DinoNuggets_Click">Dino-Nuggets Combo</Button>
        <Button Click="PBJ_Click">PB&amp;J Combo</Button>
        <Button Click="PterodactylWings_Click">Pterodactyl Wings Combo</Button>
        <Button Click="SteakosarusBurger_Click" >Steakosarus Burger Combo</Button>
        <Button Click="TRexKingBurger_Click">T-Rex King Burger Combo</Button>
        <Button Click="VelociWrap_Click">Veloci-Wrap Combo</Button>
    </WrapPanel>
</Page>
